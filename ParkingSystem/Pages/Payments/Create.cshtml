@page
@model ParkingSystem.Pages.Payments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Payment.TimeOfPayment" class="control-label"></label>
                <input asp-for="Payment.TimeOfPayment" class="form-control" />
                <span asp-validation-for="Payment.TimeOfPayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Total" class="control-label"></label>
                <input asp-for="Payment.Total" class="form-control" />
                <span asp-validation-for="Payment.Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.ParkingID" class="control-label"></label>
                <select asp-for="Payment.ParkingID" class="form-control"
                        asp-items="@Model.ParkingSL">
                    <option value="">-- Select Plate --</option>
                </select>
                <span asp-validation-for="Payment.ParkingID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
